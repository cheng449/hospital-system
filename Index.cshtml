@model IEnumerable<HospitalManagementSystem.Models.Patient>

@{
    ViewData["Title"] = "住院病人列表";
}

<div class="container-fluid">
    <h1 class="text-center">医院住院病人管理系统</h1>
    <h2 class="text-center mb-4">住院病人列表</h2>

    <div class="d-flex justify-content-between mb-3">
        <div>
            <form asp-action="Index" method="get" class="d-flex">
                <input type="text" name="searchString" class="form-control me-2" placeholder="搜索病人姓名或诊断..." value="@ViewBag.SearchString">
                <select name="statusFilter" class="form-select me-2">
                    <option value="">全部状态</option>
                    <option value="住院中" selected="@(ViewBag.StatusFilter == "住院中")">住院中</option>
                    <option value="急重" selected="@(ViewBag.StatusFilter == "急重")">急重</option>
                    <option value="已出院" selected="@(ViewBag.StatusFilter == "已出院")">已出院</option>
                </select>
                <button type="submit" class="btn btn-outline-primary">搜索</button>
            </form>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-success me-2">添加病人</a>
            <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-secondary">退出登录</a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>姓名</th>
                    <th>年龄</th>
                    <th>性别</th>
                    <th>入院日期</th>
                    <th>状态</th>
                    <th>诊断</th>
                    <th>主治医生</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Age)</td>
                        <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                        <td>@item.AdmissionDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <span class="badge @(item.Status == "急重" ? "bg-danger" : item.Status == "住院中" ? "bg-warning" : "bg-success")">
                                @Html.DisplayFor(modelItem => item.Status)
                            </span>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Diagnosis)</td>
                        <td>@Html.DisplayFor(modelItem => item.AttendingDoctor)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">查看</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">编辑</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                               onclick="return confirm('确定要删除病人 @item.Name 吗？')">删除</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>